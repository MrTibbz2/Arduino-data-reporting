#include <nRF24L01.h>
#include <RF24.h>
#include <DHT11.h>


#define SENSORTYPE DHT11
#define SENSORPIN 2


DHT11 dht11(SENSORPIN);
RF24 radio (9,10);
const byte writeaddress[6] = "add01"; //the radio address
const byte readaddress[6] = "add02";
// ce and csn pins are 7, 8


void setup() {
  Serial.begin(9600);
  delay(1000);
  Serial.println("serial connection established");
  delay(2000);
  if (radio.begin() == false) {
    Serial.println("no response");
  }  else
      Serial.println("rf24 up");
 // opens a driver instance for the nrf24l01
  radio.openReadingPipe(1, readaddress);
  radio.openWritingPipe(writeaddress); // opens the pipe for writing into 2.4ghz
  radio.setPALevel(RF24_PA_HIGH); // sets radio power lever
}


void loop() {
     const char text[] = "Hello, world!"; // Message to send
    // Send the message
   
    radio.write(&text, sizeof(text));
    Serial.print("Sent the text: ");
    Serial.println(text); // Print sent message to Serial Monitor


    delay(1000); // Wait for 1 second before sending the next message
}
